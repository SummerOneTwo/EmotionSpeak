[flake8]
max-line-length = 88
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .pytest_cache,
    htmlcov,
    data/output
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:D
